#!/usr/bin/env ruby

require "bundler/setup"
require "adventOfCode"

# Part 1
@aoc_day1 = AdventOfCode::Day1::Challenge.new 'input.txt'
result = @aoc_day1.run_part_1
puts "Distance: #{result}"

# Part 2
result2 = @aoc_day1.run_part_2
puts "The first duplicate position had a distance of: #{result2}"
